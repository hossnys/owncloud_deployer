apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{ include "owncloud.fullname" . }}-owncloud"
  labels:
    backupType:
    {{- include "owncloud.labels" . | nindent 4 }}
spec:
  capacity:
    storage: "{{ .Values.volume.size }}Gi"
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  storageClassName: ""
  hostPath:
    path: {{ .Values.volume.hostPath }}
    type: DirectoryOrCreate

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ include "owncloud.fullname" . }}-owncloud-claim"
  labels:
    backupType:
    {{- include "owncloud.labels" . | nindent 4 }}
spec:
  accessModes:
    - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: "{{ .Values.volume.size }}Gi"
  storageClassName: ""
  volumeName: "{{ include "owncloud.fullname" . }}-owncloud"